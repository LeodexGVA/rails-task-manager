<div class="container my-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
    <h1 class="text-center mb-3">Gestionnaire de tache</h1>
      <ul class="list-group">
        <% @tasks.each do |task| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= task.title %>
            <%= link_to "Plus d'info", task_path(task), class: "btn btn-info" %>
          </li>
        <% end %>
      </ul>
      <div class="text-center mt-3">
        <%= link_to "Ajouter une nouvelle tache", 'tasks/new', class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
